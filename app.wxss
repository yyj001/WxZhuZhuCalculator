/**app.wxss**/
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: center; */
  /* justify-content: space-between; */
  /* justify-content:center; */
  /* padding: 10rpx 10; */
  background-color: blue;
  /* box-sizing: border-box; */
} 

.vertical_layout{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.horizontal_layout{
  height: 110rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  padding-top: 10rpx;
}

.horizontal_layout_selected{
  height: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  background-color: #f4f4f4;
}

input{
  font-size: 45rpx;
  font-weight: 100;
  width: auto;
  height: auto;
  caret-color:#5a7cf8;
}


.edittext{
  width: 100%;
  justify-content:center;
  margin-left: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.edittext2{
  width: 100%;
  justify-content:center;
  background-color: #eee;
  margin-left: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-right: 30rpx;
}

.tips{
  text-align: center;
  font-size: 8pt;
  margin-top: 30rpx;
  margin-bottom: 15rpx;
  color: gray;
}


picker{
  width: 80rpx;
  height: 50rpx;
  text-align: center;
  font-weight: 200;
  margin-top: 25rpx;
  margin-right: 20rpx;
}

.text_icon{
  width: 50rpx ;
  height: 50rpx;
  margin-left: 30rpx;
  margin-top: 25rpx;
  justify-content:center;
}

.text_icon2{
  width: 50rpx ;
  height: 50rpx;
  margin-left: 35rpx;
  margin-top: 25rpx;
}

.picker_icon{
  width: 40rpx ;
  height: 40rpx;
  margin-left: 35rpx;
  margin-top: 26rpx;
}

.text-label{
  height: auto;
  font-size: 40rpx;
  width: 200rpx;
  color: gray;
  font-weight: 100;
  margin-top: 23rpx;
  margin-left: 10rpx;
}

.keyboard{
  padding-top: 20rpx;
  width: 100%;
  background-color: #2a333a;
  position: absolute;
  bottom: 0;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;

  height: calc(620rpx+ constant(safe-area-inset-bottom));
  height: calc(620rpx + env(safe-area-inset-bottom));
  z-index: 99;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.key{
  height: 100%;
  display: flex;
  justify-content:center;
  align-items: center;
}

.key_move{
  height: 25%;
  display: flex;
  justify-content:center;
  align-items: center;
}

.key_equal{
  height: 50%;
  display: flex;
  justify-content:center;
  align-items: center;
  background-color: #353945;
  border-radius: 20rpx;
  margin: 15rpx;
}

.key_image{
  width:50rpx;
  height:50rpx;
}