<!--index.wxml-->
<view class="vertical_layout">
	<view class="tips">
		质量 (mg) = 浓度 (mM) x 体积 (mL) x 分子量 (g/mol)
	</view>
	<!-- 质量 -->
	<view class="horizontal_layout" id="item1" style="background-color:{{color1}}" bindtap="inputFocus">
		<view>
			<image src="../images/quality.png" class="text_icon"></image>
		</view>
		<text class="text-label"> 质量:</text>
		<input id="i1" class="edittext" type="number" value="{{qualityTextValue}}" bindinput="bindTextInput" disabled="true">
		</input>
		<view>
			<image src="../images/down.png" class="picker_icon"></image>
		</view>
		<view>
			<picker id="p1" bindchange="bindPickerChange" value="{{qualityUnitIndex}}" range="{{qualityArray}}" range-key="{{'name'}}">
				<view>
					{{qualityArray[qualityUnitIndex].name}}
				</view>
			</picker>
		</view>
	</view>

	<!-- 浓度 -->
	<view class="horizontal_layout" id="item2" style="background-color:{{color2}}" bindtap="inputFocus">
		<view>
			<image src="../images/concentration.png" class="text_icon"></image>
		</view>
		<text class="text-label"> 浓度:</text>
		<input id="i2" class="edittext" type="number" value="{{concentrationTextValue}}" bindinput="bindTextInput"  disabled="true"></input>
		<view>
			<image src="../images/down.png" class="picker_icon"></image>
		</view>
		<view>
			<picker id="p2" bindchange="bindPickerChange" value="{{concentrationUnitIndex}}" range="{{concentrationArray}}" range-key="{{'name'}}">
				<view>
					{{concentrationArray[concentrationUnitIndex].name}}
				</view>
			</picker>
		</view>
	</view>

	<!-- 体积 -->
	<view class="horizontal_layout" id="item3" style="background-color:{{color3}}" bindtap="inputFocus"> 
		<view>
			<image src="../images/size.png" class="text_icon"></image>
		</view>
		<text class="text-label"> 体积:</text>
		<input id="i3" class="edittext" type="number" value="{{sizeTextValue}}" bindinput="bindTextInput"  disabled="true"></input>
		<view>
			<image src="../images/down.png" class="picker_icon"></image>
		</view>
		<view>
			<picker id="p3" bindchange="bindPickerChange" value="{{sizeUnitIndex}}" range="{{sizeArray}}" range-key="{{'name'}}">
				<view>
					{{sizeArray[sizeUnitIndex].name}}
				</view>
			</picker>
		</view>
	</view>

	<!-- 分子量 -->
	<view class="horizontal_layout" id="item4" style="background-color:{{color4}}" bindtap="inputFocus">
		<view>
			<image src="../images/molecularKey.png" class="text_icon2"></image>
		</view>
		<text class="text-label"> 分子量:</text>
		<input id="i4" class="edittext" type="number" value="{{moleculeTextValue}}" bindinput="bindTextInput"  disabled="true" placeholder=" 必填项" placeholder-style='font-size: 38rpx;color: #aaaaaa;'></input>
	</view>

<!-- 键盘 -->
<include src="widget/keyboard.wxml"/>

</view>
