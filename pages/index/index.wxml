	<view class="tips">
		质量 (mg) = 浓度 (mM) x 体积 (mL) x 分子量 (g/mol)
	</view>
	<!-- 质量 -->
	<view class="horizontal_layout">
		<view>
			<image src="../images/quality.png" class="text_icon"></image>
		</view>
		<text class="text-label"> 质量:</text>
		<input id="i1" class="edittext" type="number" value="{{qualityTextValue}}" bindinput="bindTextInput">
		</input>
		<view>
			<image src="../images/down.png" class="picker_icon"></image>
		</view>
		<view>
			<picker id="p1" bindchange="bindPickerChange" value="{{qualityUnitIndex}}" range="{{qualityArray}}" range-key="{{'name'}}">
				<view>
					{{qualityArray[qualityUnitIndex].name}}
				</view>
			</picker>
		</view>
	</view>

	<!-- 浓度 -->
	<view class="horizontal_layout">
		<view>
			<image src="../images/concentration.png" class="text_icon"></image>
		</view>
		<text class="text-label"> 浓度:</text>
		<input id="i2" class="edittext" type="number" value="{{concentrationTextValue}}" bindinput="bindTextInput"></input>
		<view>
			<image src="../images/down.png" class="picker_icon"></image>
		</view>
		<view>
			<picker id="p2" bindchange="bindPickerChange" value="{{concentrationUnitIndex}}" range="{{concentrationArray}}" range-key="{{'name'}}">
				<view>
					{{concentrationArray[concentrationUnitIndex].name}}
				</view>
			</picker>
		</view>
	</view>

	<!-- 体积 -->
	<view class="horizontal_layout">
		<view>
			<image src="../images/size.png" class="text_icon"></image>
		</view>
		<text class="text-label"> 体积:</text>
		<input id="i3" class="edittext" type="number" value="{{sizeTextValue}}" bindinput="bindTextInput"></input>
		<view>
			<image src="../images/down.png" class="picker_icon"></image>
		</view>
		<view>
			<picker id="p3" bindchange="bindPickerChange" value="{{sizeUnitIndex}}" range="{{sizeArray}}" range-key="{{'name'}}">
				<view>
					{{sizeArray[sizeUnitIndex].name}}
				</view>
			</picker>
		</view>
	</view>

	<!-- 分子量 -->
	<view class="horizontal_layout">
		<view>
			<image src="../images/molecularKey.png" class="text_icon2"></image>
		</view>
		<text class="text-label"> 分子量:</text>
		<input id="i4" class="edittext" type="number" value="{{moleculeTextValue}}" bindinput="bindTextInput" placeholder="必填项"></input>
	</view>

<button bindtap="calculate">计算</button>

</view>